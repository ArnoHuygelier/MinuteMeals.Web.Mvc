@model Recipe
@{
    ViewData["Title"] = "Recipe - " + @Model.Name;
}

<div class="text-center mb-4">
    <h1 class="display-4">@Model.Name: Snel & Smakelijk</h1>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="card text-center" style="width: 80%; max-width: 800px;">
        <div class="card-body">
            <!-- Titel en subtitel -->
            <h5 class="card-title mb-2">@Model.Name</h5>
            <h6 class="card-subtitle mb-3 text-muted">Kooktijd: @Model.CookingTimeInMinutes minuten</h6>

            <!-- Ingrediënten en Bereidingswijze -->
            <div class="card-text">
                <p><strong>Ingrediënten:</strong></p>
                <p>@Model.Ingredients</p>
                <p><strong>Bereidingswijze:</strong></p>
                <p>@Model.Steps</p>
            </div>

            <!-- Terug-knop -->
            <div class="mt-3">
                <a href="/" class="btn btn-primary border-0" style="background-color: green">Terug</a>
            </div>
        </div>
    </div>
</div>





